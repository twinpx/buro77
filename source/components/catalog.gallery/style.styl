@import '../../styl/component-include.styl'

.slideme {
  
  li {
    margin: 0;
    padding: 0;
  }
  
  img {
    width: 100% !important;
  }
}

.slideme_container {
  
  button {
    display: none;
  }
  
  .pagination {
    position: absolute;
    bottom: 20px;
    left: 0;
    width: 100%;
    z-index: 10;
    
    ol {
      margin: 0;
      padding: 0;
      text-align: center;
      line-height: 0;
    }
    
    li {
      list-style-type: none;
      ib()
      text-indent: -100px;
      overflow: hidden;
      width: 12px;
      height: 12px;
      border-radius(12px);
      background: #ccc;
      box-shadow: 0px 1px 2px rgba(0,0,0,0.15) inset;
      margin: 0 3px;
      cursor: pointer;
    
      &.current {
        background: #fff;
      }
    }
    
  }
  
  ul {
    padding-top: 65%;
    height: 0 !important;
  }
}

.b-estate .fotorama__nav-wrap
  display none

.b-estate .b-estate__plan .fotorama__nav-wrap
  display block
  
.fotorama

  .fotorama__arr
    width 64px
    height 64px
    background-size cover
    
  .fotorama__arr--next
    background embedurl( 'img/right-arrow.svg' ) no-repeat center
    right 15px
    
    @media( max-width 767px )
      display none !important
    
  .fotorama__arr--prev
    background embedurl( 'img/left-arrow.svg' ) no-repeat center
    left 15px
    
    @media( max-width 767px )
      display none !important
    
  &--fullscreen .fotorama__fullscreen-icon
    background embedurl( 'img/close.svg' ) no-repeat center !important
    background-size cover
    top 15px
    right 15px
    
.fotorama__fullscreen-icon
  background embedurl( 'img/zoom.svg' ) no-repeat center !important
  top 10px
  right 10px
  width 32px
  height 32px
  
.b-catalog-gallery__img
  height 100%

  div
    width 100%
    height 100%
    background-repeat no-repeat
    background-position center
    background-size cover
    
.fotorama__stage
  width calc( 100% + 40px ) !important
  height 400px
  
.fotorama__wrap
  max-width none
  
.fotorama
  margin 0 -20px
