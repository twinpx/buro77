@import '../../styl/component-include.styl'

.slideme {
  
  li {
    margin: 0;
    padding: 0;
  }
  
  img {
    width: 100% !important;
  }
}

.slideme_container {
  
  button {
    display: none;
  }
  
  .pagination {
    position: absolute;
    bottom: 20px;
    left: 0;
    width: 100%;
    z-index: 10;
    
    ol {
      margin: 0;
      padding: 0;
      text-align: center;
      line-height: 0;
    }
    
    li {
      list-style-type: none;
      ib()
      text-indent: -100px;
      overflow: hidden;
      width: 12px;
      height: 12px;
      border-radius(12px);
      background: #ccc;
      box-shadow: 0px 1px 2px rgba(0,0,0,0.15) inset;
      margin: 0 3px;
      cursor: pointer;
    
      &.current {
        background: #fff;
      }
    }
    
  }
  
  ul {
    padding-top: 65%;
    height: 0 !important;
  }
}

.b-estate .fotorama__nav-wrap
  display none
  
.fotorama

  .fotorama__arr
    width 53px
    height 53px
    background-size cover
    
  .fotorama__arr--next
    background embedurl( 'img/right-arrow.svg' ) no-repeat center
    right 15px
    
  .fotorama__arr--prev
    background embedurl( 'img/left-arrow.svg' ) no-repeat center
    left 15px
    
  &--fullscreen .fotorama__fullscreen-icon
    width 32px
    height 32px
    background embedurl( 'img/close.svg' ) no-repeat center !important
    background-size cover
    top 20px
    right 20px
    
.fotorama--fullscreen .fotorama__img
  width auto !important
  height 70% !important
  top 50% !important
  left 50% !important
  margin -20% 0 0 -30% !important
  
.fotorama--fullscreen .fotorama__stage,
.fotorama--fullscreen
  background rgba( 0,0,0,.5 ) !important