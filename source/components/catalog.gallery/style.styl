@import '../../styl/component-include.styl'

.slideme {
  
  li {
    margin: 0;
    padding: 0;
  }
  
  img {
    width: 100% !important;
  }
}

.slideme_container {
  
  button {
    display: none;
  }
  
  .pagination {
    position: absolute;
    bottom: 20px;
    left: 0;
    width: 100%;
    z-index: 10;
    
    ol {
      margin: 0;
      padding: 0;
      text-align: center;
      line-height: 0;
    }
    
    li {
      list-style-type: none;
      ib()
      text-indent: -100px;
      overflow: hidden;
      width: 12px;
      height: 12px;
      border-radius(12px);
      background: #ccc;
      box-shadow: 0px 1px 2px rgba(0,0,0,0.15) inset;
      margin: 0 3px;
      cursor: pointer;
    
      &.current {
        background: #fff;
      }
    }
    
  }
  
  ul {
    padding-top: 65%;
    height: 0 !important;
  }
}