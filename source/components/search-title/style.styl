@import '../../styl/component-include.styl'

div.title-search-result {
	//display:none;
	overflow:hidden;
	z-index:205;
  width: calc(100% - 227px) !important;
  max-height: 315px !important;
  border: none;
  background: #1b1b1b;
  //top: 200px !important;
  left: 177px !important;
  position: fixed !important;
  overflow: auto;
  
  @media( max-width: 575px ) {
    left: 20px !important;
    width: calc(100% - 40px) !important;
  }
}

table.title-search-result {
	border:none;
	//width:10%;
  //width: 450px !important;
}

table.title-search-result tr:nth-child(2) th {
  padding-top:17px;
}

table.title-search-result th {
	background-color:#1b1b1b;
  color: #999;
	font-weight:normal;
	padding:0;
	vertical-align:top;
	white-space:nowrap;
  font-size:9pt;
  display: block;
  text-align: left;
}

table.title-search-result td {
	background-color:#1b1b1b;
	font-weight:normal;
	padding:0;
	text-align:left;
  display: block;
}

table.title-search-result td.title-search-item {
	padding:0;
}

table.title-search-result td.title-search-item a {
	padding:0;
	text-decoration: none;
	vertical-align:top;
	display:block;
  font-size:10.5pt;
  margin-bottom: 10px;
  line-height: 1.7;
}

table.title-search-result td.title-search-item img {
	vertical-align:top;
  display: none;
}

table.title-search-result tr.title-search-selected td
,table.title-search-result tr.title-search-selected a
,table.title-search-result tr.title-search-selected td.title-search-more a
{
	background-color:#1b1b1b;
}

table.title-search-result td.title-search-more {
	font-size:9pt;
	font-weight:normal;
	padding-right:15px;
	padding-left:24px;
	padding-top:0px;
  color:#1b1b1b;
}

table.title-search-result td.title-search-more a
{
	text-decoration:none;
  color:#1b1b1b;
  font-size:0;
}

table.title-search-result td.title-search-all {
	padding-left:24px;
	padding-right:15px;
  padding:0;
}

table.title-search-result td.title-search-all a
{
	padding-left:4px;
	text-decoration:none;
	color:#1b1b1b;
  font-size:0;
}

table.title-search-result td.title-search-separator
, table.title-search-result th.title-search-separator {
	padding-top:0px;
	padding-bottom:0px;
	font-size:4px;
  display: none;
}

div.title-search-fader {
	display:none !important;
	background-image: url('images/fader.png');
	background-position: right top;
	background-repeat: repeat-y;
	position:absolute;
}

table.title-search-result td.title-search-item b {
  color: inherit;
  font-weight: bold;
}

table.title-search-result td.title-search-item span.search_props {
  display: block;
  color: #999;
}

table.title-search-result td.title-search-item a:hover span.search_props {
  display: block;
  color: #ccc;
}

#ascrail2001.nicescroll-rails {
  z-index: 205 !important;
}