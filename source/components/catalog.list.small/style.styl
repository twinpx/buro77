@import '../../styl/component-include.styl'

.b-el-small
  position absolute
  top 0
  left 0
  width 220px
  height 100%
  overflow auto

  @media ( max-width 980px )
    display none
  
  &__wrapper
    width 220px
    background embedurl("img/bg.gif") repeat-y 0 0
  
  &__i
    position relative
    background url(/template/images/preloader-small-25.gif) no-repeat 32px 32px #252525
    line-height 1.3
    display block
    overflow hidden
    
    &:hover,
    &:active,
    &:focus
      color #fff
    
    
    &:nth-child( even )
      background-color #171717
      background-image url(/template/images/preloader-small-17.gif)
    
    
    &__small-img
      display none
    
    
    @media ( max-width $breakpoint-tablet )
      float left
      width 20%
    
    
    &__img
      position absolute
      top 0
      left 0
      width 100%
      height auto
      opacity(0)
      transition( opacity 0.5s ease )
      z-index 10
      
      &-bw
        width 100%
        height auto
        display block
        opacity(0)
        transition( opacity 0.5s ease )
      
    
    
    &__shutter
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background embedurl("img/grad.png") repeat-y 0 0
      background-size 100%
      opacity(0)
      transition( opacity 0.5s ease )
      z-index 9
    
    
    &.i-loaded &__img-bw,
    &.i-loaded &__shutter
      opacity(1)
    
    
    /*&:first-child
      cursor default
      
      .b-el-small__i__img-bw,
      .b-el-small__i__props
        display none
      
      
      .b-el-small__i__img
        opacity(1)
        position static
        vertical-align top
      
      
      .b-el-small__i__shutter
        background embedurl("img/first-arrow.png") no-repeat center center
    */
    
    
    &:hover &__img
      opacity(1)
    
    
    &__props
      display block
      width 100%
      position absolute
      bottom 14%
      right 0
      box-sizing( border-box )
      padding 0
      text-align right
      font-size $font-size-sm
      font-weight bold
      text-align center
      z-index 12
      
      span
        display block
        font-size $font-size-bs
        margin-bottom 45px
      
      
      @media ( max-width $breakpoint-tablet )
        display none