@import '../../styl/component-include.styl'

@import './filter.styl'

.b-estate-list
  position relative
  overflow hidden
    
  &:after
    clear both
    content "."
    display block
    height 0
    visibility hidden
  
  &__img-div-bw,
  &__img-div
    opacity(0)
    transition( opacity 0.5s ease )
    width 100%
    height 100%
    abs()
    background-repeat no-repeat
    background-position center center
    background-size cover
    
    
  .i-loaded &__img-div-bw,
  .i-img-loaded:hover &__img-div
    opacity(1)
    
  &__empty
    position absolute
    bottom 0
    left 0
    width 100%
    padding-top 25%
    z-index 7
    
    @media ( max-width 800px)
      width 400%
      padding-top 100%
    
    
    @media ( max-width 1200px ) and ( min-width 801px )
      width 200%
      padding-top 50%
    
    
    @media ( max-width 1600px ) and ( min-width 1201px )
      width 33.3%
      width 133.2%
      padding-top 33.3%
    
    
    &__cont
      position absolute
      bottom 0
      left 0
      width 100%
      height 100%
    
    
    &__i
      float left
      width 25%
      height 100%
      background-color #252525
      position relative
      
      &:nth-child( even )
        background-color #171717
      
    
  
  
  &__i
    float left
    width 50%
    position relative
    background url(/template/images/preloader-25.gif) no-repeat 55px 55px #252525
    line-height 1.3
    overflow hidden
    z-index 8
    
    &:hover,
    &:active,
    &:focus
      color #fff
    
    
    &:nth-child( even )
      background-color #171717
      background-image url(/template/images/preloader-17.gif)
    
    
    &__small-img,
    &__small-img-bw
      display none
    
    
    &__img,
    &__small-img,
    &__big-img
      position absolute
      top 0
      left 0
      width 100%
      height auto
      opacity(0)
      transition( opacity 0.5s ease )
      z-index 10
      
      &-bw
        width 100%
        height auto
        display block
        opacity(0)
        transition( opacity 0.5s ease )
      
    
    
    &__shutter
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background embedurl("img/grad.png") repeat-y 0 0
      background-size 100%
      opacity(0)
      transition( opacity 0.5s ease )
      z-index 9
    
    
    &.i-loaded &__img-bw,
    &.i-loaded &__shutter,
    &.i-img-loaded:hover &__img
      opacity(1)
    
    
    &__title
      display block
      position absolute
      bottom 8%
      left 0
      width 50%
      text-align left
      font-size 18pt
      line-height 1.4
      word-wrap break-word
      box-sizing( border-box )
      padding-left 50px
      line-height 1.2
      z-index 11
    
      @media ( max-width 520px)
        padding-left 20px
      
    
    
    &__props
      display block
      position absolute
      bottom 8%
      right 0
      width 50%
      box-sizing( border-box )
      padding-right 50px
      text-align right
      font-size 10.5pt
      z-index 12
    
      @media ( max-width 520px)
        padding-right 20px
      
      
      span
        font-size 8pt
      
    
    
    span&__price
      display block
      margin-top 14px
      font-size 13.5pt
    
    
    @media ( min-width 801px )
      &.i-large-item
        float none
        display block
        width 100%
        max-height 525px
        overflow hidden
        
        .b-estate-list__i__title
          font-size 36pt
          bottom 12%
        
        
        .b-estate-list__i__props
          font-size 13.5pt
          line-height 1.45
          bottom 12%
        
        
        .b-estate-list__i__price
          font-size 26pt
          margin-top 6px
        
      
    
    
    @media ( max-width 800px)
      width 100%
      
      &__small-img,
      &__small-img-bw
        display block
      
      
      &__big-img,
      &__big-img-bw
        display none !important
      
    
    @media ( max-width 1200px ) and ( min-width 801px )
      width 50%
    
    @media ( max-width 1600px ) and ( min-width 1201px )
      width 33.3%
    
    @media ( min-width 1601px )
      width 25%

      
  &.i-empty
    padding-top 25%
    
    @media ( max-width 800px)
      padding-top 100%
    
    @media ( max-width 1200px ) and ( min-width 801px )
      padding-top 50%
    
    @media ( max-width 1600px ) and ( min-width 1201px )
      padding-top 33.3%


.b-empty-link
  border 6px solid #666666
  position absolute
  top 25%
  left 25%
  width 50%
  height 50%
  animation( opacityAnimation 1.5s )
  transition( background 0.5s ease )
  box-sizing( border-box )
  
  &:hover
    background rgba(255,255,255,0.1)
  
  
  &__cont
    font-size 18pt
    color #999
    display block
    position absolute
    top 50%
    left 50%
    width 125px
    height 125px
    
    span
      ib()
      margin -50% 0 0 -50%
      text-align center
    
  
  


@keyframes opacityAnimation
  from {
    opacity: 0
  }
  to {
    opacity: 1
  }


@-webkit-keyframes opacityAnimation
  from {
    opacity: 0
  }
  to {
    opacity: 1
  }
