@import '../../styl/component-include.styl'

$breakpoint = 400px

.b-estate

  &__bar
    margin-bottom 23px
    
    &:after
      clear both
      content "."
      display block
      height 0
      visibility hidden
    
    .b-favorite-icon
      float right
      
  &__props
    line-height 1.4
    overflow hidden
  
    &-item
      float left
      overflow hidden
      margin 3px 7% 17px 0
      opacity 0
      transition( opacity 0.5s ease )
      
      .i-animate &
        opacity 1
        
        &:nth-child(1)
          transition-delay .1s
        
        &:nth-child(2)
          transition-delay .2s
        
        &:nth-child(3)
          transition-delay .3s
        
        &:nth-child(4)
          transition-delay .4s
        
        &:nth-child(5)
          transition-delay .5s
        
        &:nth-child(6)
          transition-delay .6s
        
        &:nth-child(7)
          transition-delay .7s
        
        &:nth-child(8)
          transition-delay .8s
        
        &:nth-child(9)
          transition-delay .9s
        
        &:nth-child(10)
          transition-delay 1s
      
    &__icon
      width 16px
      height 16px
      background-repeat no-repeat
      background-position center
      background-size cover
      float left
      margin-top 1px
      margin-right 12px
      
    &__text
      float left
      font-size 10.5pt
      
      h6
        margin 0
        font-size 7pt
  
