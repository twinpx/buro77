html,
body
  margin 0
  padding 0
  overflow hidden

section
  width 1022px
  height 700px
  font-family Arial, sans-serif
  font-size 9pt
  box-sizing border-box
  
  p
    margin 15px 0
    font-size 10.5pt
    line-height 1.7
  
#page1
  overflow hidden
  background url( images/bg1-1.jpg ) no-repeat center
  background-size cover
  position relative
  
  .b-bg
    display none
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    z-index 1
    
    img
      width 100%
      height auto
  
  .b-belt
    position absolute
    top 50%
    left 0
    width 100%
    height 184px
    background rgba( 0,0,0,0.9 )
    margin-top -92px
    color #fff
    padding-top 62px
    box-sizing border-box
    z-index 2
    
    &__logo
      float left
      width 30%
      text-align center
     
    &__slogan
      float left
      width 20%
      font-weight 300
      color #fff
     
    &__id
      float left
      width 20%
      font-weight 700
      color #fff
     
    &__address
      float left
      width 30%
      font-weight 700
      color #fff
      
.b-page
  position relative
  clear both

  &__head
    overflow hidden
    margin-bottom 34px
    
    &:after
      content ''
      display block
      clear both
    
  &__logo
    float left
    width 30%
    
    img
      vertical-align top
    
  &__img
    float left
    margin-right 20px
    
  /*&__slogan
    float left
    font-size 8pt*/
    
  &__contacts
    float left
    font-size 9pt
    //font-weight bold
    text-align right
    margin-top 20px
    
  &__address
    float right
    font-size 9pt
    //font-weight bold
    text-align right
    margin-top 3px
    
  &__left-images
    float left
    width 50%
    
    img
      width 100%
      vertical-align top
      
      &:first-child
        margin-bottom 20px
      
  &__right-text
    float right
    width 50%
    padding-left 60px
    box-sizing border-box
    padding-bottom 30px
    
    .b-page__head
      margin-bottom 44px
    
      &.i-footer
        position absolute
        bottom 20px
        right 20px
        width 50%
        padding-left 80px
        margin-bottom 0
        box-sizing border-box
        
        .b-page__address
          margin-top 0
      
    .b-page__address
      margin-top 20px
    
    h2
      font-size 17pt
      font-weight normal
      margin-bottom 35px
      padding-right 40px
      
    p
      padding-right 40px
    
  &__left-column
    float left
    width 60%
    margin-right 25px
    
    img
      width 100%
      height auto
      
  &__props1
    margin-bottom 35px
    
    &__item
      margin-bottom 3px
      
      &:after
        content ''
        display block
        clear both
      
    img
      margin-right 12px
      float left
      width 24px
      height 24px
      
    &__text
      float left
      width 413px
      margin-top 3px
      
  &__body__ill img
    vertical-align top
  
  &__right-column
    float left
    width 35%
    
  &__row
    
    &:after
      content ''
      clear both
      display block
      
  &__left-props
    float left
    width 45%
    box-sizing border-box
    padding-right 20px
      
  &__right-props
    float left
    width 55%
      
  &__props2
    
    &__item
      margin-bottom 25px
      
      &:after
        content ''
        display block
        clear both
        
      b,
      span
        font-size 12pt
      
    img
      margin-right 12px
      float left
      width 24px
      height 24px
      
    &__text
      float left
      width 145px
      
    h6
      margin 0 0 5px
      
  &__ills
    
    &__item
      
      img
        vertical-align top
        margin 0
        
    &__sep
      text-align center
      font-size 9pt
      padding 7px 0
    
  dl
    font-size 8pt
    line-height 26px
    margin 0 0 20px
  
  dt
    font-weight bold
    margin-right 10px
    float left
    line-height 26px
    
    img
      display inline-block
      vertical-align middle
      margin-right 12px
    
  dd
    margin 0
    
  .i-simple
    dt
      float none
      
  .b-ill
    width 100%
    height auto
    margin-top 20px
  
@media print

  #page1
    background none

    .b-bg
      display block
      
    .b-belt
      background none