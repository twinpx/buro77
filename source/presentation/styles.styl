html,
body
  margin 0
  padding 0
  overflow-x hidden

section
  width 100vw
  height 100vh
  font-family "Open Sans", Arial, sans-serif
  font-size 10.5pt
  box-sizing border-box
  
  p
    margin 15px 0
    font-size 8pt
  
#page1
  overflow hidden
  background url( images/bg1-1.jpg ) no-repeat center
  background-size cover
  
  .b-bg
    display none
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    z-index 1
    
    img
      width 100%
      height auto
  
  .b-belt
    position absolute
    top 50%
    left 0
    width 100%
    height 184px
    background rgba( 0,0,0,0.9 )
    margin-top -92px
    color #fff
    padding-top 62px
    box-sizing border-box
    z-index 2
    
    &__logo
      float left
      width 30%
      text-align center
     
    &__slogan
      float left
      width 20%
      font-weight 300
      color #fff
     
    &__id
      float left
      width 20%
      font-weight 700
      color #fff
     
    &__address
      float left
      width 30%
      font-weight 700
      color #fff
      
.b-page
  padding 20px 58px

  &__head
    overflow hidden
    margin-bottom 22px
    
  &__logo
    float left
    
  &__img
    float left
    margin-right 20px
    
  &__slogan
    float left
    font-size 8pt
    
  &__address
    float right
    font-size 10.5pt
    font-weight bold
    text-align right
    
  &__left-column
    float left
    width 60%
    margin-right 25px
    
    img
      width 100%
      height auto
  
  &__right-column
    float left
    width 35%
    
  dl
    font-size 8pt
    line-height 26px
    margin 0 0 20px
  
  dt
    font-weight bold
    margin-right 10px
    float left
    line-height 26px
    
    img
      display inline-block
      vertical-align middle
      margin-right 12px
    
  dd
    margin 0
    
  .i-simple
    dt
      float none
      
  .b-ill
    width 100%
    height auto
    margin-top 20px
  
@media print

  #page1
    background none

    .b-bg
      display block
      
    .b-belt
      background none