.b-footer
  background-color #000
  color #fff
  border none
  padding 10px 50px 35px 177px
  box-sizing( border-box )
  min-height 90px
  font-size 10.5pt
  line-height 1.3
  
  .b-col-sm-6:nth-child(2)
    text-align right
    
  a.b-logo__title
    margin-bottom 14px
  
    &,
    &:hover,
    &:active
      color #fff
      
  .b-phone
    background-image embedurl( 'img/phone-footer.png' )
    color #fff !important
    float none
    text-align right
    ib()
    margin-bottom 18px
  
  @media ( max-width $breakpoint-tablet )
    .b-logo__title
      margin-top 20px
      
    .b-col-sm-6:nth-child(2)
      text-align left
      
    .b-phone
      margin-bottom 0
  
  @media ( max-width $breakpoint-mobile )
    padding 10px 20px
    min-height 0
    text-align center
    
    .b-phone
      margin 0
      
    .b-col-sm-6:nth-child(2)
      text-align center
    
    &__slogan,
    &__address,
    a.b-logo__title
      display none

#bx-composite-banner
  text-align right
  
  @media ( max-width $breakpoint-tablet )
    text-align left
  
  @media ( max-width $breakpoint-mobile )
    text-align center
  
.bx-composite-btn
  position relative !important
  top 0 !important
  right 0 !important