.b-header
  background-color $header-bg
  color #333
  border none
  padding 20px 50px 5px 177px
  box-sizing( content-box )
  min-height 42px
  
  .b-block-b.i-reverse &
    padding-left 50px
  
  a
    
    &,
    &:hover,
    &:active
      color #333
  
  @media ( max-width $breakpoint-mobile)
    margin-top 45px
    padding 35px 20px
    min-height 0
    text-align center
    
.b-phone
  float right
  line-height 42px
  text-align right
  font-size 9pt
  font-weight 700
  color #e5241f !important
  
    
  @media ( max-width $breakpoint-mobile )
    display none
    
a.b-estate-logo
  display block
  float left
  margin -5px 30px 0 0
  
  @media ( max-width $breakpoint-mobile )
    margin 0 0 20px
    float none
    
.b-top-menu
  float left
  line-height 42px
  
  a,
  span
    text-transform uppercase
    font-size 9pt
    font-weight bold
    margin-right 24px
    display inline-block
    vertical-align middle
    
  @media ( max-width $breakpoint-mobile )
    float none
    line-height 20px
    
