@import '../../styl/component-include.styl'

.b-price-block
  font-size 9pt
  box-shadow 0 10px 20px rgba(0,0,0,.07)
  transition( all .3s ease )
  
  &:hover
    box-shadow 0 10px 20px rgba( 92,76,124,.2 )
    
  &.i-sold
    opacity .5
      
  @media( min-width 768px ) and ( max-width 979px )
  
    & .b-row .b-col-sm-6:first-of-type
      width 40%
  
    & .b-row .b-col-sm-6:last-of-type
      width 60%

  &__img
    display block
    padding-top 100%
    background-repeat no-repeat
    background-position center
    background-size cover
    position relative
    
    a&:hover
      opacity 1
      
    span
      display inline-block
      line-height 20px
      position absolute
      top 50%
      left 50%
      margin -10px 0 0 -43px
      text-transform uppercase
      background-color #fff
      width 86px
      text-align center
      color #000
    
  &__text
    padding-top 12px
    padding-bottom 12px
    line-height 1.6
    
    @media( max-width 767px )
      padding-right 15px
      padding-left 15px
    
  &__bottom
    border-top 1px solid #e2e2e2
    padding 15px 0
    font-weight bold
    
  &__price
    padding-left 40px
    
    .b-filter .b-col-xs-6&
      padding-left 26px
    
  &__more
    text-align right
    padding-right 40px
    
    .b-filter .b-col-xs-6&
      padding-right 26px
    
    a
      color #333
