@import '../../styl/component-include.styl'

.b-theme-blocks
  padding 53px
  background-color #1b1b1b
  overflow hidden
  
  @media ( max-width 575px )
    padding 20px
  
.b-theme-block
  display flex
  justify-content center
  background-color #141414
  box-shadow 0 4px 40px rgba( 0,0,0,.2 )
  transition( box-shadow 0.3s ease )
  
  &:hover
    box-shadow 0 4px 40px rgba( 170,21,255,.21 )
    
  @media ( max-width 575px )
    display block
  
  &__img
    padding-top 50%
    width 50%
    position relative
    background-repeat no-repeat
    background-position center
    background-size cover
    
    @media ( max-width 575px )
      padding-top 100%
      display block
      width auto
    
    span
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-repeat no-repeat
      background-position center
      background-size cover
      transition( opacity 0.3s ease )
      
    .b-theme-block:hover &
      
      span
        opacity 0
    
  &__text
    width 50%
    padding 25px 35px 45px
    position relative
    box-sizing border-box
    
    @media ( max-width 1199px )
      padding 20px 20px 45px
    
    @media ( max-width 575px )
      width auto
    
    h3
      margin-top 0
      line-height 1.5
      
      @media ( max-width 1199px )
        line-height 1.3
    
  &__link
    position absolute
    bottom 30px
    left 35px
    text-transform uppercase
    font-size 7pt
    
    @media ( max-width 1199px )
      left 20px