  &-panel
    background-color #333
    text-shadow none
    color #fff
    
    &__button
      display block
      width 29px
      height 29px
      background url("data:image/gifbase64,R0lGODlhHQAXAIABAOzs7P///yH5BAEAAAEALAAAAAAdABcAAAIkhI+py+0PW5i02ouz3rz7D4biSHrRiaYqVLbuC8fyDK72jTcFADs=") no-repeat 0 0
      position absolute
      top 38px
      left 49px
      
      @media ( max-width $breakpoint-mobile )
        display none

.b-logo
        
  @media ( max-width $breakpoint-mobile )
    display none
  
  &__title
    display block
    border-bottom 1px solid rgba( 255,255,255,0.1 )
    padding 15px 0 11px
    text-align center
  
    img
      ib()
      margin 2px 0 5px
    
  &__slogan
    ib()
    font-size 10.5pt
    line-height 42px
    
    @media ( max-width $breakpoint-tablet )
      line-height normal
      display block
      margin-top 8px
    
    @media ( max-width $breakpoint-mobile )
      display none