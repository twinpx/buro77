  &-panel
    background-color #333
    text-shadow none
    color #fff
    
    &__button
      display block
      width 29px
      height 29px
      background url("data:image/gifbase64,R0lGODlhHQAXAIABAOzs7P///yH5BAEAAAEALAAAAAAdABcAAAIkhI+py+0PW5i02ouz3rz7D4biSHrRiaYqVLbuC8fyDK72jTcFADs=") no-repeat 0 0
      position absolute
      top 38px
      left 49px
      
      @media ( max-width $breakpoint-mobile )
        display none
      
  &__search
    height 80px
    background-color #1b1b1b
    border-bottom 1px solid #333333
  
    &__result
      padding 30px 0 0 115px
      font-size 10.5pt
      transition( all .2s ease .5s )
      transform( translate( -50px, 0 ))
      opacity 0
      
      .i-open &
        opacity 1
        
      div
        margin-bottom 2px
        transition( all .2s ease-in )
        transform( translate( -50px, 0 ))
        opacity 0
      
        .i-open &
          transform( translate(0, 0))
          opacity 1
        
        &:nth-child(1)
          transition-delay .5s
        
        &:nth-child(2)
          transition-delay .6s
        
        &:nth-child(3)
          transition-delay .7s
        
        &:nth-child(4)
          transition-delay .8s
        
        &:nth-child(5)
          transition-delay .9s
        
      
      div&__header
        font-size 8pt
        color #999
        margin-bottom 11px
  
    .i-menu-open &
      border-top 1px solid #f6f6f6
      border-bottom 1px solid #f6f6f6
      padding 8px 0 6px
  
    &__close
      width 24px
      height 24px
      background url( '/template/images/icons/close-icon-white.svg' ) no-repeat center
      background-size cover
      cursor pointer
      position absolute
      top 28px
      right 20px
      display none
      
      @media ( max-width $breakpoint-mobile )
        right 0
  
    .i-searchshow &
      animation ac-gn-searchform-slide 1s 200ms both
  
    .i-searchshow.i-searchhide &
      display none
    
    &-wrapper
      opacity(0)
      transition( all .7s ease .7s )
      //display none
      
      .i-open &
        opacity(1)
        
      @media ( max-width $breakpoint-mobile )
        width 100%
    
    .b-search-icon
      display inline-block
      vertical-align middle
      width 24px
      height 24px
      background url(/template/images/icons/search-icon-zoom.svg) no-repeat center center
      margin 2px 22px 0 16px
      
    .form-control
      width 80%
      display inline-block
      border none
      box-shadow none
      font-size 13.5pt
      background-color #1b1b1b
      height 79px
      line-height 79px
      padding 0
      
      &:focus
        outline none
        
    .form-group
      position relative
    
    @media ( max-width 767px )
      
      .b-search-icon
        position absolute
        top 30px
        left -32px
        width 22px
        height 22px
        margin 0
        
      .form-group
        margin 0 0 0 40px
        position relative
        
      .form-control
        font-size 10pt

.b-logo
        
  @media ( max-width $breakpoint-mobile )
    display none
  
  &__title
    display block
    border-bottom 1px solid rgba( 255,255,255,0.1 )
    padding 15px 0 11px
    text-align center
  
    img
      ib()
      margin 2px 0 5px
    
  &__slogan
    ib()
    font-size 10.5pt
    line-height 42px
    
    @media ( max-width $breakpoint-tablet )
      line-height normal
      display block
      margin-top 8px
    
    @media ( max-width $breakpoint-mobile )
      display none