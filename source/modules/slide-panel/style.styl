@import '../../styl/component-include.styl'

.b-side
  position relative
  z-index 107
  
  &-icons
    position fixed
    top 0
    left 0
    width 127px
    z-index 109
    
    @media ( max-width $breakpoint-mobile )
      width 100%
      background-color #333
    
    .b-favorites-link
      margin-left 45px
      
      @media ( max-width $breakpoint-mobile )
        display none

  &-bar
    position fixed
    top 0
    left 0
    width 554px
    height 100%
    background-color #333
    transform( translate(-427px, 0))
    transition( all 0.5s ease )
    z-index 108
    
    &__content
      padding 0 80px 0 127px
      opacity(0)
      transition( all 0.5s ease )
      
      @media ( max-width $breakpoint-mobile )
        padding 50px 20px 20px 20px
    
    &.i-open
      transform( translate(0, 0))
    
      .b-side-bar__content
        opacity(1)
    
    &__button
      display block
      width 35px
      height 35px
      background embedurl( 'img/menu.svg' ) no-repeat center center
      background-size cover
      margin 48px 0 30px 45px
    
      @media ( max-width $breakpoint-mobile )
        width 48px
        height 45px
        margin 0 auto
        background-size 50%
    
    &__top
      display block
      text-transform uppercase
      color #fff
      font-size 6pt
      position fixed
      bottom -60px
      left 0
      width 127px
      height 46px
      text-align center
      cursor pointer
      transition( bottom 0.5s ease )
      
      &:before
        content " "
        display block
        width 0
        height 0
        border-style solid
        border-width 0 28.5px 29px 28.5px
        border-color transparent transparent #484848 transparent
        margin 0 auto 3px
      
      
      &.i-show
        bottom 20px
      
      
      @media( max-width $breakpoint-mobile )
        display none
      
      
      .i-ipad &
        display none
      
    
    
    @media ( max-width $breakpoint-mobile )
      width 100%
      height 100%
      transform( translate(0, -100%))
      
      &.i-open
        transform( translate(0, 0))
      
    
    
    menu
      list-style-type none
      margin 31px 0 196px
      padding 0
      font-size 18pt
      
      menu
        font-size 13.5pt
        margin 15px 0 33px 30px
        
        @media ( max-width $breakpoint-mobile )
          font-size 10.5pt
        
      span
        margin-left 20px
      
      @media ( max-width $breakpoint-mobile )
        margin-bottom 0
    
    li
      margin-bottom 7px
      
      li
        margin-bottom 17px
    
